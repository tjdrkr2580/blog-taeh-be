// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
id  String @id @default(uuid())
userName  String @unique
hashPassword String    
isRole  Boolean @default(false)
}

model Post {
  id  String @id @default(uuid())
  title String @unique
  Tag String
  contents String
  views Int @default(0)
}
